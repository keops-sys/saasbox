doctype html
html(lang="en")
  head  
    include inc/head.pug
    
  body
    include inc/loader.pug
    
    include inc/header.pug
    
    // Breadcrumb Area
    .breadcrumb--area.bg-img.bg-overlay.jarallax(style="background-image: url('img/bg-img/12.jpg');")
        .container.h-100
            .row.h-100.align-items-center
                .col-12
                    .breadcrumb-content
                        h2.breadcrumb-title Login
                        nav(aria-label="breadcrumb")
                            ol.breadcrumb.justify-content-center
                                li.breadcrumb-item
                                    a(href="index.html") Home
                                li.breadcrumb-item.active(aria-current="page")
                                    a(href="#") Login
    
    // Register Area
    .register-area.section-padding-120-70
        .container
            .row.align-items-center.justify-content-between
                // Register Thumbnail
                .col-12.col-lg-6
                    .register-thumbnail.mb-50
                        img(src="img/bg-img/hero-3.png" alt="")
            
                // Register Card
                .col-12.col-lg-6
                    .card.register-card.bg-gray.p-1.p-sm-4.mb-50
                        .card-body
                            h4 Welcome Back!
                            p Didn't have an account?
                                a.ml-2(href="register.html") Sign Up

                            // Register Form
                            .register-form.my-5
                                form(action="#" method="post")
                                    .form-group.mb-3
                                        input.form-control.rounded-0(type="email" placeholder="Email Address" required)
                                    .form-group.mb-3
                                        label.label-psswd(for="password")
                                            span.hide HIDE
                                            span.show SHOW
                                        input.input-psswd.form-control.rounded-0#password(type="password" placeholder="Password" psswd-shown="false" required)

                                    button.btn.saasbox-btn.white-btn.w-100(type="submit")
                                        i.lni-unlock.mr-2
                                        | Login
                                        
                                .login-meta-data.d-flex.align-items-center.justify-content-between
                                    .form-check.mt-3
                                        input.form-check-input#rememberMe(type="checkbox", value="", checked)
                                        label.form-check-label(for="rememberMe") Keep me logged in

                                    a.forgot-password.mt-3(href="forget-password.html") Forgot Password?
                                    
                            // Sign in via others
                            .signin-via-others
                                p.mb-0 Or Sign in with
                                a.btn.saasbox-btn.btn-sm.mt-3.mr-3(href="#")
                                    i.fa.fa-facebook.mr-2
                                    | Facebook
                                a.btn.saasbox-btn.btn-sm.mt-3.mr-3(href="#")
                                    i.fa.fa-twitter.mr-2
                                    | Twitter
    .container
        .border-top
                    
    include inc/footer-3.pug